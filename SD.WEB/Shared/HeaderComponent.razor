<MudPaper Class="mb-2" Outlined="true">
    <MudToolBar WrapContent="true" Dense="true" Gutters="false" Class="mx-1">
        @if (!string.IsNullOrEmpty(IconName))
        {
            <MudIcon Icon="@IconName" Size="Size.Large"></MudIcon>
        }
        @if (!string.IsNullOrEmpty(IconImage))
        {
            <MudImage Src="@IconImage" Style="height: 40px; vertical-align: sub;" Alt="@IconName"></MudImage>
        }
        <MudText Typo="Typo.h6" Inline="true" Class="mx-2">@Title</MudText>
        <MudSpacer></MudSpacer>
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </MudToolBar>
</MudPaper>

@code {
    [Parameter] public string? IconName { get; set; }
    [Parameter] public string? IconImage { get; set; }
    [Parameter] public string? Title { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
}