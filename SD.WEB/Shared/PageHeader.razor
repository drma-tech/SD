@inherits ComponentCore<PageHeader>

<MudPaper Class="@PaperClass" Outlined="true" Elevation="0">
    <MudToolBar WrapContent="true" Gutters="false" Style="min-height: auto;">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <MudIcon Icon="@Icon" Class="me-2" Color="Color" Style="font-size: 48px;"></MudIcon>
        }
        else if (!string.IsNullOrEmpty(Image))
        {
            <MudImage Src="@Image" Class="me-2" Style="@ImageStyle" Alt="@Image"></MudImage>
        }
        <div>
            <MudText Typo="Typo.h1" Color="Color.Primary" Style="font-size: 23px; line-height: 1.2;">
                @Title
            </MudText>
            @if (Subtitle.NotEmpty())
            {
                <MudText Typo="Typo.subtitle1" Color="Color.Secondary" Style="font-size: 17px; line-height: 1.2;">
                    @Subtitle
                </MudText>
            }
        </div>
        @if (Link.NotEmpty())
        {
            <MudSpacer />
            <MudTooltip Text="Official Website">
                <MudFab Color="Color.Primary" StartIcon="@Icons.Material.Filled.Link" Href="@Link" Target="_blank" Size="Size.Small" />
            </MudTooltip>
        }
        else if (ActionFragment != null)
        {
            <MudSpacer />
            @ActionFragment
        }
    </MudToolBar>
    @if (Description.NotEmpty())
    {
        <div style="text-align: justify;" class="mt-2">
            <MudText Typo="Typo.body1" Align="Align.Justify" Style="line-height: 1.2">
                @Description
            </MudText>
        </div>
    }
</MudPaper>

@code {
    [Parameter][EditorRequired] public string? Title { get; set; }
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string? Description { get; set; }
    [Parameter] public string? Link { get; set; }

    [Parameter] public Color Color { get; set; } = MudBlazor.Color.Primary;
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Image { get; set; }
    [Parameter] public string? ImageStyle { get; set; } = "max-height: 48px; max-width: 48px; width: 100%; vertical-align: top;";

    [Parameter] public string? PaperClass { get; set; } = "mb-4 pa-2";

    [Parameter] public RenderFragment? ActionFragment { get; set; }
}
