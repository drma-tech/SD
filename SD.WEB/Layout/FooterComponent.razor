@using SD.WEB.Modules.Support.Resources
@inherits ComponentCore<FooterComponent>

@if ((Support && Breakpoint <= Breakpoint.Sm) || (!Support && Breakpoint > Breakpoint.Sm))
{
    <MudDivider Class="mb-3 mt-10"></MudDivider>
    <MudGrid Justify="Justify.Center" Style="overflow: auto;" Spacing="2">
        <MudItem xs="12" sm="12" md="3">
            <MudList T="string" Color="Color.Surface">
                <MudListSubheader>
                    <MudText Typo="Typo.button" Color="Color.Primary">
                        @SeoTranslations.AppName
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="@SeoTranslations.AppDescription" Dense="true" Style="text-align: justify" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string">
                <MudListSubheader>
                    <MudText Typo="Typo.button" Color="Color.Secondary">
                        COMPANY
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Website" Href="https://www.drma-tech.com/" Dense="true" Target="_blank" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string">
                <MudListSubheader>
                    <MudText Typo="Typo.button" Color="Color.Secondary">
                        PRODUCT
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Website" Href="https://www.streamingdiscovery.com" Dense="true" Target="_blank" />
                <MudListItem Text="Google Play" Href="https://play.google.com/store/apps/details?id=com.streamingdiscovery.www.twa" Dense="true" Target="_blank" />
                <MudListItem Text="Microsoft Store" Href="https://apps.microsoft.com/detail/9pb1pkrdd8l0" Dense="true" Target="_blank" />
                <MudListItem Text="HUAWEI AppGallery" Href="https://appgallery.huawei.com/app/C111325113" Dense="true" Target="_blank" />
                <MudListItem Text="Xiaomi GetApps" Href="https://global.app.mi.com/details?lo=ID&id=com.streamingdiscovery.www.twa" Dense="true" Target="_blank" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string">
                <MudListSubheader>
                    <MudText Typo="Typo.button" Color="Color.Secondary">
                        SUPPORT
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="Contact" Href="mailto:support@streamingdiscovery.com" Dense="true" />
                <MudListItem Text="FAQ" Href="@GetSupportUrl("faq")" Dense="true" />
            </MudList>
        </MudItem>
        <MudItem xs="12" sm="3" md="2">
            <MudList T="string">
                <MudListSubheader>
                    <MudText Typo="Typo.button" Color="Color.Secondary">
                        LEGAL
                    </MudText>
                </MudListSubheader>
                <MudListItem Text="@Translations.LinkTerm" Href="@GetSupportUrl("terms")" Dense="true" />
                <MudListItem Text="@Translations.LinkPrivacy" Href="@GetSupportUrl("privacy")" Dense="true" />
                <MudListItem Text="Credits" Href="/support/credits" Dense="true" />
            </MudList>
        </MudItem>
    </MudGrid>
}

@code {
    [Parameter] public bool Support { get; set; }

    private string GetSupportUrl(string type)
    {
        string lang;
        switch (AppStateStatic.Language)
        {
            case Language.ptAO:
            case Language.ptBR:
            case Language.ptMZ:
            case Language.ptPT:
                lang = "pt";
                break;
            case Language.esAR:
            case Language.esCL:
            case Language.esDO:
            case Language.esEC:
            case Language.esES:
            case Language.esGQ:
            case Language.esGT:
            case Language.esHN:
            case Language.esMX:
            case Language.esNI:
            case Language.esPA:
            case Language.esPE:
            case Language.esPY:
            case Language.esSV:
            case Language.esUY:
                lang = "es";
                break;
            default:
                lang = "en";
                break;
        }
        return $"/support/{type}/{lang}";
    }
}
