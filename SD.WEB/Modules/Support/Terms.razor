@page "/support/terms/{lang}"
<SeoHeader Title="Terms" Url=@($"/support/terms/{Lang}")></SeoHeader>

<style>
    .terms-container {
        max-width: 900px;
        margin: 32px auto;
        padding: 40px 24px 32px 24px;
        background: var(--mud-palette-background, #fff);
        border-radius: 12px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.09);
    }

    .terms-title {
        text-align: center;
        font-size: 2.2rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--mud-palette-text-primary, #222);
    }

    .terms-subtitle {
        text-align: center;
        color: var(--mud-palette-text-secondary, #555);
        font-size: 1.1rem;
        margin-bottom: 2.2rem;
    }

    .terms-section {
        margin-bottom: 2.2rem;
    }

        .terms-section h3 {
            margin-bottom: 0.7rem;
            color: var(--mud-palette-primary, #1976d2);
            font-size: 1.18rem;
            font-weight: 500;
        }

        .terms-section p {
            text-align: justify;
            margin-bottom: 0.5rem;
            color: var(--mud-palette-text-primary, #333);
            line-height: 1.7;
        }
</style>

<div class="terms-container">
