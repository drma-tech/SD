@using SD.WEB.Modules.Profile.Components

<WishlistComponent MediaType="MediaType.movie" ShowHeader="true" FullScreen="false" Watched="Watched" Watching="Watching" Wish="Wish"
                   Core="CoreWishlist" ExpressionEmpty="(WishList? list) => list == null || list.Movies.Empty()" IsAuthenticated="IsAuthenticated" UserId="@UserId">
</WishlistComponent>

<WishlistComponent MediaType="MediaType.tv" ShowHeader="true" FullScreen="false" Watched="Watched" Watching="Watching" Wish="Wish"
                   Core="CoreWishlist" ExpressionEmpty="(WishList? list) => list == null || list.Shows.Empty()" IsAuthenticated="IsAuthenticated" UserId="@UserId">
</WishlistComponent>

@code {
    [Parameter][EditorRequired] public RenderControlCore<WishList?> CoreWishlist { get; set; } = new();
    [Parameter][EditorRequired] public WatchedList? Watched { get; set; }
    [Parameter][EditorRequired] public WatchingList? Watching { get; set; }
    [Parameter][EditorRequired] public WishList? Wish { get; set; }
    [Parameter][EditorRequired] public bool IsAuthenticated { get; set; }
    [Parameter][EditorRequired] public string? UserId { get; set; }
}