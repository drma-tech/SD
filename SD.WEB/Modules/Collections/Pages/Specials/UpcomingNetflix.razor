@page "/collections/upcoming-netflix"
<SeoHeader Title="Collections | Upcoming Netflix Movies" Description="@SD.WEB.Resources.Credit.UpcomingNetflixMovies" Keywords="@(new[] { "Upcoming Netflix Movies" })" Url="/collections/upcoming-netflix"></SeoHeader>
@using SD.WEB.Modules.Collections.Core
@using SD.WEB.Modules.Profile.Core
@using SD.WEB.Modules.Collections.Components
@inherits PageCore<UpcomingNetflix>
@inject TmdbListApi TmdbListApi
@inject WatchedListApi WatchedListApi
@inject WatchingListApi WatchingListApi
@inject WishListApi WishListApi

<PageHeader Title="Upcoming Netflix Movies" Image="logo/netflix-logo.png" Description="@SD.WEB.Resources.Credit.UpcomingNetflixMovies"></PageHeader>

<GoogleAdSense Section="@GoogleAdSense.AdUnit.Collections"></GoogleAdSense>

<MediaListFull MediaListApi="TmdbListApi" List="@EnumLists.UpcomingNetflixMovies" Watched="WatchedList" Watching="WatchingList" Wish="WishList"
               FullPage="true" ShowHead="false">
</MediaListFull>

@code {
    public WatchedList? WatchedList { get; set; }
    public WatchingList? WatchingList { get; set; }
    public WishList? WishList { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        WatchedListApi.DataChanged += model =>
        {
            WatchedList = model;
            StateHasChanged();
        };
        WatchingListApi.DataChanged += model =>
        {
            WatchingList = model;
            StateHasChanged();
        };
        WishListApi.DataChanged += model =>
        {
            WishList = model;
            StateHasChanged();
        };
    }

    protected override async Task LoadAuthDataAsync()
    {
        WatchedList = await WatchedListApi.Get(AppStateStatic.IsAuthenticated, null);
        WatchingList = await WatchingListApi.Get(AppStateStatic.IsAuthenticated, null);
        WishList = await WishListApi.Get(AppStateStatic.IsAuthenticated, null);
    }

}